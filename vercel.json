
{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "/api/bot.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/bot.js"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "ALPHA_VANTAGE_KEY": "@alpha_vantage_key", 
    "TWELVE_DATA_KEY": "@twelve_data_key"
  }
}


